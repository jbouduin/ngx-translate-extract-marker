{
  "compilerOptions": {
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitUseStrict": true,
    "removeComments": true,
    "declaration": true,
    "target": "esnext",
    "lib": [
      "es2019",
      "DOM"
    ],
    "module": "ES2020",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "./lib",
    "sourceMap": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [ "src" ],
  "exclude": [ "node_modules", "**/__tests__/*" ]
}